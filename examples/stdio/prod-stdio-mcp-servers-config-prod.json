{
  "mcpServers": {
    "druid-mcp-server": {
      "command": "java",
      "args": [
        "-jar",
        "target/druid-mcp-server-1.0.0.jar"
      ],
      "env": {
        "SPRING_AI_MCP_SERVER_STDIO": "true",
        "SPRING_MAIN_WEB_APPLICATION_TYPE": "none",
        "DRUID_ROUTER_URL": "https://druid.example.com",
        "DRUID_AUTH_USERNAME": "mcp-user",
        "DRUID_AUTH_PASSWORD": "mcp-user-password",
        "DRUID_SSL_ENABLED": "true",
        "LOGGING_PATTERN_CONSOLE": ""
      }
    }
  }
}
