{
  "mcpServers": {
    "druid-mcp-server": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "-e", "SPRING_AI_MCP_SERVER_STDIO=true",
        "-e", "SPRING_MAIN_WEB_APPLICATION_TYPE=none",
        "-e", "LOGGING_PATTERN_CONSOLE=",
        "-e", "DRUID_ROUTER_URL=https://druid.example.com",
        "-e", "DRUID_AUTH_USERNAME=mcp-user",
        "-e", "DRUID_AUTH_PASSWORD=mcp-user-password",
        "-e", "DRUID_SSL_ENABLED=true",
        "iunera/druid-mcp-server:latest"
      ]
    }
  }
}